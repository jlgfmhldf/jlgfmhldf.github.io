.about
	display flex
	flex-direction column
	align-items center

	+below($tablet)
		padding-x 4%

	&__title
		margin-top 3rem
		margin-bottom 3rem

	&__list
		text-align center
		margin-bottom 2rem // TODO

	&__list-item
		font-size 1.1rem
		line-height 1.5

	&__content
		display flex
		justify-content center
		flex-direction column
		width 50%

		+below($tablet)
			width 100%

	&__text
		font-size 1.2rem
		line-height 1.5
		margin 1rem 0


.about
	display flex
	flex-direction column
	align-items center

	&__list
		text-align center
		margin-bottom 2rem // TODO

	&__list-item
		font-size 1.1rem
		line-height 1.5

	&__content
		display flex
		justify-content center
		align-items center
		flex-direction column
		margin 15vh 0
		width 50%

		+tablet()
			width 80%
			margin 2vh 0

		+mobile()
			width 80%
			margin 2vh 0


	&__text
		font-size 1.1rem
		line-height 1.5
		margin 1rem 0


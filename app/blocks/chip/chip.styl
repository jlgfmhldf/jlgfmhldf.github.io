.chip
	display block
	padding .4rem .8rem
	border-radius 20px
	color $grey-600
	box-shadow 0 2px 5px 0 rgba(0, 0, 0, .16), 0 2px 10px 0 rgba(0, 0, 0, .12)
	cursor pointer
	transition .2s ease-out
	font-size 14px
	background $grey-300
	text-decoration none

	&:hover
		box-shadow 0 5px 11px 0 rgba(0, 0, 0, .18), 0 4px 15px 0 rgba(0, 0, 0, .15)

	&_active
		background $blue-color
		color $white



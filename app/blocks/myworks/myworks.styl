.myworks
	display flex
	align-items center
	flex-direction column
	min-height 100vh

	&__title
		color $blue-gray-900
		text-transform uppercase
		font-family 'Open Sans', open-sans, sans-serif
		font-size 2.5rem
		letter-spacing .03em
		font-weight 500
		line-height 1
		text-align center
		margin-top 3rem
		margin-bottom 3rem

	&__projects
		column-count 3
		width 90%

		+below($tablet)
			width 100%

	&__project
		display inline-block
		margin 1%
		width 31.333%

		+below($tablet)
			width 47%
			margin .5rem

		+mobile()
			width 93% // TODO
			margin 1rem


	&__content
		display flex
		width 100%
		padding-left 5%
		padding-right 5%

		+below($tablet)
			flex-direction column
			padding-left 0
			padding-right 0
			display block

	&__filter-section
		width 15%

		+below($tablet)
			width 100%
			padding-left 2%
			padding-right 2%
			margin-bottom 2rem

	&__clear-filters
		display inline-block
		padding .5rem .8rem
		background $red-A200
		color $white
		cursor pointer
		text-decoration none
		font-size .9rem
		line-height 1.5
		border-radius 3px
		text-transform uppercase
		box-shadow 0 2px 2px 0 rgba(0, 0, 0, .14), 0 3px 1px -2px rgba(0, 0, 0, .2), 0 1px 5px 0 rgba(0, 0, 0, .12)

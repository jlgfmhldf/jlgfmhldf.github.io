.myworks
	display flex
	align-items center
	flex-direction column
	height 100vh

	&__title
		color #282f3d
		text-transform uppercase
		font-family 'Open Sans', open-sans, sans-serif
		font-size 2.5rem
		letter-spacing .03em
		font-weight 500
		line-height 1
		text-align center
		margin-bottom 2rem // TODO

	&__projects
		column-count 3
		width 90%

	&__project
		display: inline-block;
		margin:  0.25rem;
		padding:  1rem;
		width:  100%

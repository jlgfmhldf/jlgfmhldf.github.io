.myworks
	display flex
	align-items center
	flex-direction column
	min-height 100vh

	&__title
		color $blue-gray-900
		text-transform uppercase
		font-family 'Open Sans', open-sans, sans-serif
		font-size 2.5rem
		letter-spacing .03em
		font-weight 500
		line-height 1
		text-align center
		margin-top 3rem
		margin-bottom 3rem

	&__projects
		column-count 3
		width 90%

	&__project
		display inline-block
		margin 1%
		width 31.333%

		+tablet()
			margin .5rem

	&__content
		display flex
		width 100%
		padding-left 5%
		padding-right 5%

		+tablet()
			flex-direction column
			padding-left 2%
			padding-right 2%

		+mobile()
			padding-left 2%
			padding-right 2%

	&__filter-section
		width 15%

	&__clear-filters
		display inline-block
		margin-left 1rem
		padding: .3rem .5rem
		background $blue-color
		color $white
		cursor pointer
		text-decoration none
		font-size 1.1rem
		line-height 1.5

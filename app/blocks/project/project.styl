.project
	display block
	border-radius .2rem
	box-shadow 0 2px 2px 0 rgba(0, 0, 0, .14), 0 3px 1px -2px rgba(0, 0, 0, .2), 0 1px 5px 0 rgba(0, 0, 0, .12)

	&_theme_dark &__title
		color $white

	&_theme_dark &__description
		color $grey-300

	&_theme_dark &__link
		color $blue-gray-A100

	&__title
		font-family Roboto, Helvetica, Arial, sans-serif
		font-size 1.8rem
		margin-bottom .5rem

	&__description
		font-size 1rem
		color $grey-600
		margin-bottom .5rem
		line-height 1.4

	&__content
		padding 1rem

	&__link
		margin-right 1rem
		display inline-block
		color $link-color
		font-size 1.1rem
		text-transform uppercase
		text-decoration none
		margin-top 1rem

	&__img
		width 100%


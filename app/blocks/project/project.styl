.project
	display block
	border-radius .2rem
	box-shadow 0 2px 2px 0 rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.2), 0 1px 5px 0 rgba(0,0,0,.12)

	&_theme_dark &__title
		color #fff

	&_theme_dark &__description
		color #d1d1d1

	&_theme_dark &__link
		color $link-color

	&__title
		font-family Roboto,Helvetica,Arial,sans-serif
		font-size 1.8rem
		margin-bottom .5rem

	&__description
		font-size 1.2rem
		color #757575
		margin-bottom .5rem
		line-height 1.4rem

	&__content
		padding 1rem

	&__link
		margin-right 1rem
		color $blue-color
		font-size 1.3rem

	&__img
		width 100%


.project
	display block
	border-radius .2rem
	box-shadow 0 2px 2px 0 rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.2), 0 1px 5px 0 rgba(0,0,0,.12)

	&__title
		font-family Roboto,Helvetica,Arial,sans-serif
		font-size 1.8rem
		margin-bottom .5rem

	&__description
		font-size 1.2rem
		color #757575
		margin-bottom .5rem

	&__content
		padding 1rem

	&__tag
		color orangered
		cursor pointer
		text-decoration none


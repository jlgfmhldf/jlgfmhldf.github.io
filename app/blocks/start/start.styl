.start
	display flex
	justify-content center
	align-items center
	flex-direction column
	min-height 100vh

	&__title
		color #282f3d
		text-transform uppercase
		font-family 'Open Sans', open-sans, sans-serif
		font-size 4rem
		letter-spacing .03em
		font-weight 500
		line-height 1
		text-align center

	&__description
		font-weight 300
		font-size 1.75rem
		color #888d9c
		line-height 36px
		text-align center
		margin-top 8px
		padding 0 15%

	&__skills
		display flex
		margin-top 52px

	&__skill
		margin-right 5px

		&:last-child
			margin-right 0

	&__link
		display flex
		align-items center
		margin-right 2rem
		text-decoration none
		transition .5s ease
		color #000
		fill #000

		&_github

			&:hover
				color #006eed
				fill #006eed

		&_skype

			&:hover
				color #12A5F4
				fill #12A5F4

		&_email

			&:hover
				color #e04c40
				fill #e04c40

	&__link-text
		margin-left .5rem
		color inherit
		font-size 1.3rem


	&__links
		display flex
		margin-top 6rem

	&__icon
		size 1.2rem

		&_github
			transform translateY(-1px)

		&_skype
			transform translateY(-1px)



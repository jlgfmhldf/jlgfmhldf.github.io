@font-face
	font-family 'icomoon'
	src url('../fonts/icomoon/icomoon.eot')
	src url('../fonts/icomoon/icomoon.eot#iefix') format('embedded-opentype'),
		url('../fonts/icomoon/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon/icomoon.woff') format('woff'),
		url('../fonts/icomoon/icomoon.svg#icomoon') format('svg')
	font-weight normal
	font-style normal

[class^='icon-'], [class*=' icon-']
	font-family 'icomoon'
	speak none
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	line-height 1
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

.icon-mail
	&:before
		content '\e903'
		color goldenrod

.icon-skype
	&:before
		content '\e900'
		color #00aff0

.icon-vk
	&:before
		content '\e901'
		color #6383a8

.icon-telegram
	&:before
		content '\e902'
		color #2ca5e0

.icon-github
	&::before
		content '\e904'
		color #af07af
